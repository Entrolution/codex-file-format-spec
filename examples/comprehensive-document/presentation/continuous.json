{
  "version": "0.1",
  "type": "continuous",
  "defaults": {
    "fontFamily": "system-ui, -apple-system, sans-serif",
    "fontSize": "16px",
    "lineHeight": 1.6,
    "maxWidth": "80ch",
    "margin": "2rem auto",
    "padding": "1rem"
  },
  "styles": {
    "heading": {
      "1": {
        "fontSize": "2.5rem",
        "fontWeight": "bold",
        "marginTop": "2rem",
        "marginBottom": "1rem"
      },
      "2": {
        "fontSize": "2rem",
        "fontWeight": "bold",
        "marginTop": "1.5rem",
        "marginBottom": "0.75rem"
      },
      "3": {
        "fontSize": "1.5rem",
        "fontWeight": "bold",
        "marginTop": "1.25rem",
        "marginBottom": "0.5rem"
      }
    },
    "paragraph": {
      "marginBottom": "1rem"
    },
    "codeBlock": {
      "fontFamily": "ui-monospace, monospace",
      "fontSize": "0.9rem",
      "backgroundColor": "#f5f5f5",
      "padding": "1rem",
      "borderRadius": "4px",
      "overflow": "auto"
    },
    "blockquote": {
      "borderLeft": "4px solid #ccc",
      "paddingLeft": "1rem",
      "marginLeft": "0",
      "fontStyle": "italic"
    },
    "table": {
      "borderCollapse": "collapse",
      "width": "100%",
      "marginBottom": "1rem"
    },
    "tableCell": {
      "border": "1px solid #ddd",
      "padding": "0.5rem"
    },
    "horizontalRule": {
      "border": "none",
      "borderTop": "1px solid #ccc",
      "margin": "2rem 0"
    },
    "math": {
      "display": {
        "textAlign": "center",
        "margin": "1.5rem 0"
      }
    },
    "figure": {
      "margin": "1.5rem 0",
      "textAlign": "center"
    },
    "figcaption": {
      "fontStyle": "italic",
      "fontSize": "0.9rem",
      "marginTop": "0.5rem"
    },
    "measurement": {
      "fontFamily": "ui-monospace, monospace",
      "backgroundColor": "#f0f8ff",
      "padding": "0.25rem 0.5rem",
      "borderRadius": "2px"
    },
    "signature": {
      "border": "1px dashed #999",
      "padding": "1rem",
      "margin": "1rem 0",
      "backgroundColor": "#fafafa"
    },
    "definitionList": {
      "marginBottom": "1rem"
    },
    "definitionTerm": {
      "fontWeight": "bold",
      "marginTop": "0.5rem"
    },
    "definitionDescription": {
      "marginLeft": "1.5rem",
      "marginBottom": "0.5rem"
    }
  }
}
